
var HSBType hsbValue
var int SoffitR
var int SoffitG
var int SoffitB
var String RGBvalues

rule "Set Basement LED value"
 when
 Item Basement_LED changed
 then
 hsbValue = Basement_LED.state as HSBType

 SoffitR = hsbValue.red.intValue
 SoffitG = hsbValue.green.intValue
 SoffitB = hsbValue.blue.intValue


 RGBvalues = SoffitR.toString + "," + SoffitG.toString + "," + SoffitB.toString
 sendCommand( Basement_LED_RGB, RGBvalues )

 logInfo( "Basement_LED", RGBvalues )
end
