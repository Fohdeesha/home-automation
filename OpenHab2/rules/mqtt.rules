import org.openhab.core.library.types.*

var HSBType hsbValue
var int SoffitR
var int SoffitG
var int SoffitB
var String RGBvalues

rule "Set RGB 2 value"
 when
 Item fWIFI_RGB_2 changed
 then
 hsbValue = fWIFI_RGB_2.state as HSBType

 SoffitR = hsbValue.red.intValue
 SoffitG = hsbValue.green.intValue
 SoffitB = hsbValue.blue.intValue


 RGBvalues= SoffitR.toString + "," + SoffitG.toString + "," + SoffitB.toString
 sendCommand( WIFI_RGB_2_RGB, RGBvalues )

 logInfo( "fWIFI_RGB_2", RGBvalues )
end
